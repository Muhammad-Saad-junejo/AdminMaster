@{
    ViewData["Title"] = "Master Entites";
}

<a asp-action="Index">
    <button class="btn btn-dark">Go Back</button>
</a>
<h1 style="color:white; display:flex; justify-content:center;">Master Entites</h1>
<div class="container">
    <div class="row justify-content-center ">


        <div class="card-group" style="width: 35rem; margin-top: 40px">
          
            <div class="card bg-transparent text-dark" >
                <a asp-action="CustomerSetup" asp-controller="Home" style="margin-top:20px">
                    <img src="~/image/custom.png"
                         class="card-img-top"
                         alt="..." 
                         style="width:14rem"/>
                    <div class="card-body text-center">
                        <button class="btn btn-dark">Customer setup</button>
                    </div>
                </a>
            </div>
            <div class="card bg-transparent text-dark">
                <a asp-action="ItemSetup" asp-controller="Home">
                    <img src="~/image/item.png"
                         class="card-img-top"
                         alt="..." />
                    <div class="card-body text-center">
                        <button class="btn btn-dark">Item Setup</button>
                    </div>
                </a>
            </div>

            <div class="card bg-transparent text-dark" >
                <a asp-action="Users" asp-controller="Home">
                    <img src="~/image/user.png"
                         class="card-img-top"
                         alt="..." />
                    <div class="card-body text-center">
                        <button class="btn btn-dark">Users</button>
                    </div>
                </a>
            </div>


        </div>


    </div>
</div>