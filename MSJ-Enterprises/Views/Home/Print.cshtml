@model SaleInvoice
@{
    ViewData["Title"] = "Print Preview";
}

<a asp-action="ShowSaleInvoices" style="float:right">
    <button class="btn btn-dark">Go Back</button>
</a>

<a onclick="printA4(); return false;" style="float:right">
<button class="btn btn-success">Print</button>
</a>

<div class="a4-container">
    <h2 class="text-center" style="font-weight:bold; padding-top:30px; font-size: 24px;font-family:'Times New Roman', Times, serif">Sale Invoice</h2>

    <h1 style="font-weight:bold; text-align:center; padding-top:20px; font-size: 40px; font-family:'Times New Roman', Times, serif">MSJ ENTERPRISES</h1>
    <h2 style="font-weight:bold; text-align:center; font-size: 20px;font-family:'Times New Roman', Times, serif">Address: 22/29 Sector 11-D New Karachi Pakistan</h2>
    <h2 style="font-weight:bold; text-align:center; font-size: 20px;font-family:'Times New Roman', Times, serif">Email: muhammadsaadjunejo@gmail.com Contact: 0312-2196252</h2>


    
        <table class="table table-bordered" style="margin-top:20px; width:100%;">
            <tr>
                <th>Invoice</th>
                <td>@Model.ID</td>
                <th>Date:</th>
                <td>@Model.Date</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td>@Model.Customers?.Name</td>
            <th>Customer Address</th>
            <td>@Model.Customers?.Address</td>

        </tr>
        </table>

    <table class="table table-bordered" border="1" style="margin-top:40px; width:100%; " id="saleTable">
        <tr>

        <th>Item Name</th>
        <th>Qty</th>
        <th>Rate</th>
        <th>Discount</th>
        <th>Amount</th>
        </tr>
        @foreach (var item in Model.SaleItems)
        {


            <tr>
                <td>@item.Item?.Name</td>
                <td class="iQty">@item.Qty</td>
                <td class="iRate">@item.Rate</td>
                <td class="iDiscount">@item.Discount</td>

                <td class="iamount">
                    @item.Amount
                </td>
            </tr>
        }

        </table>

        <br />
    <h2>Invoice Total:<span id="invoiceTotal" style="border:2px solid black; padding:10px; margin:15px; font-weight:bolder">@Model.Total</span></h2>
    <div class="signature-container">
        <div class="signature-block">
            <div class="signature-line"></div>
            <div class="signature-text">Admin Signature</div>
        </div>
        <div class="signature-block">
            <div class="signature-line"></div>
            <div class="signature-text">Customer Signature</div>
        </div>
    </div>
 </div>