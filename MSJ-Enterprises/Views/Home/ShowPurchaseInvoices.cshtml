@model List<PurchaseInvoice>

@{
    ViewData["Title"] = "Show Purchase Invoice";
}

<a asp-action="Transcation">
    <button class="btn btn-dark">Go Back</button>
</a>

<a asp-action="PurchaseInvoice">
    <button class="btn btn-info">Create New Invoice</button>
</a>
<h1 style="color:white; display:flex; justify-content:center;">Purchase Invoices</h1>

<table style="margin-top:20px" class="table text-white">
    <tr>
        <th>INVOICE #</th>
        <th>Date</th>
        <th>Party</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ID</td>
            <td>@item.Date</td>
            <td>@item.Customers?.Name</td>
            <td>

                <a asp-action="PurPreview" asp-route-id="@item.ID">
                    <button class="btn btn-info">Preview</button>

                </a>
                

            </td>
        </tr>

    }
</table>