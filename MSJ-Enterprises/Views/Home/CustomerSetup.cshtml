@model List<Customers>

@{
    ViewData["Title"] = "Customer Setup";
}


<a asp-action="Master">
    <button class="btn btn-dark">Go Back</button>
</a>


<a asp-action="AddCustomer">
    <button class="btn btn-success">Add Customer</button>
</a>


<h1 style="color:white; display:flex; justify-content:center;">Customer List</h1>

<table style="margin-top:40px" class="table text-white">
    <tr>
        <th>ID</th>
        <th>Party Name</th>
        <th>Address</th>
        <th>Opening Date</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Cid</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Opening_Date</td>
            <td>
                <a asp-action="AddCustomer">
                    <button class="btn btn-success">Add</button>
                </a>
                
                <a asp-action="EditCustomer" asp-route-id="@item.Cid">

                <button class="btn btn-warning">Edit</button>
                </a>

               

            </td>

        </tr>

    }
    

</table>