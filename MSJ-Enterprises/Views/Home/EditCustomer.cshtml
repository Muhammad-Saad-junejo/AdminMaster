@model Customers
@{
    ViewData["Title"] = "Edit Customers";
}


<a asp-action="CustomerSetup">
    <button class="btn btn-dark">Go Back</button>
</a>

<h1 style="color:white; display:flex; justify-content:center;">Edit Customer</h1>

<table class="table text-white">
    <tr>
        <th>ID</th>
        <th>Party Name</th>
        <th>Address</th>
        <th>Opening Date</th>
        <th>Action</th>
    </tr>
    <tr>
        <form method="post">
        <td><input asp-for="Cid" type="hidden" /></td>

        <td><input asp-for="Name" placeholder="Customer Name" /></td>
        <td><input asp-for="Address" placeholder="Address" /></td>
        <td><input asp-for="Opening_Date" type="date" placeholder="Date" /></td>

        <td>

            <input type="submit" class="btn btn-success" value="Update Customer" />
        </td>

        </form>

    </tr>



</table>
