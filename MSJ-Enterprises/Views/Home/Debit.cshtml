@model Bank

@{
    ViewData["Title"] = "Debit";
}


<a asp-action="Accounts">
    <button class="btn btn-dark">Go Back</button>
</a>

<h1 style="color:white; display:flex; justify-content:center;">Debit Voucher</h1>

<form class="form-horizontal" method="post" style="color:white" asp-action="Debit">
    <div class="col-sm-6" >
        <div class="form-group">
            <label class="control-label col-sm-4">Date</label>
            <div class="col-sm-8">
                <input asp-for="Date" type="date" class="form-control">
            </div>
        </div>
        <span asp-validation-for="Date" style="color:red"></span>
    </br>
        <div class="form-group">
            <label class="control-label col-sm-4">Party Name</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="CustomerId" asp-items="ViewBag.CustomerSL">
                    <option value="">Select Party Name</option>
                    
                </select>
            </div>
        </div>
        <span asp-validation-for="CustomerId" style="color:red"></span>
        </br>
        <div class="form-group">
            <label class="control-label col-sm-4">Payment Type</label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="PaymentType">
                <option value="">Select Payment Type</option>
                <option value="Cash">Cash</option>
                <option value="Cheque">Cheque</option>
                </select>
            </div>
        </div>
        <span asp-validation-for="PaymentType" style="color:red"></span>
        </br>
        <div class="form-group">
            <label class="control-label col-sm-4">Cheque #</label>
            <div class="col-sm-8">
                <input asp-for="ChqNo" />
            </div>
        </div>
    </div>
    <span asp-validation-for="ChqNo" style="color:red"></span>
    </br>
    <div class="col-sm-12">
        <div class="form-group">
            <label class="control-label col-sm-2">Description</label>
            <div class="col-sm-10">
                <textarea type="text" asp-for="Description" class="form-control" rows="2"></textarea>
            </div>
        </div>
    
    </div>
    <span asp-validation-for="Description" style="color:red"></span>
    </br>
    <div class="col-sm-12">
        <div class="form-group">
            <label class="control-label col-sm-2">Amount</label>
            <div class="col-sm-10">
                <input asp-for="Debit" />
            </div>
        </div>
    </div>
    <span asp-validation-for="Debit" style="color:red"></span>
    <input type="hidden" value="0" asp-for="Credit"/>

    <div class="d-grid" style="margin-top:30px">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>
